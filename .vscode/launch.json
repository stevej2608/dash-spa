{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1. usage.py",
      "type": "python",
      "request": "launch",
      "python": "${command:python.interpreterPath}",
      "program": "${workspaceFolder}/usage.py",
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "env": {"FLASK_ENV" : "test"},
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },
    {
      "name": "2. examples/table.py",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "module": "examples.table",
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "justMyCode": false
    },
    {
      "name": "3. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-sv"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "console": "internalConsole",
      "justMyCode": false
    },
    {
      "name": "4. PyTest (Current file)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "--headless",
        "-sv",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      //"justMyCode": false
    },
  ]
}