{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "1a. usage.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "usage.py",
      "console": "internalConsole",
      //"env": {"DASH_SPA_ENV" : "test"},
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },

    {
      "name": "1b. Python: examples.context.app",
      "type": "python",
      "request": "launch",
      //"module": "tmp.context_skeleton",
      "module": "examples.context.app",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },

    {
      "name": "1c. dataclass_exp.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "dataclass_exp.py",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },


    {
      "name": "3. Python: Current Module",
      "type": "python",
      "request": "launch",
      "module": "${command:extension.commandvariable.file.relativeDirDots}.${fileBasenameNoExtension}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false,
      "serverReadyAction": {
        "pattern": ".*Visit http://(.*)",
        "uriFormat": "http://%s",
        "action": "openExternally"
      }
    },
    {
      "name": "3. PyTest (all)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "-sv"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "console": "internalConsole",
      "justMyCode": false
    },
    {
      "name": "4. PyTest (Current file)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": [
        "--headless",
        "-sv",
        "tests/spa"
      ],
      "cwd": "${workspaceRoot}",
      "env": {},
      "envFile": "${workspaceRoot}/.env",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "justMyCode": false
    },
  ]
}